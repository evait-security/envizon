<%= simple_form_for @report, remote: true do |f| %>
  <div class="row">
    <%= f.input :title, wrapper_html: { class: 'col-10' } %>
    <div class="col-2 form-group d-flex align-items-end">
      <button type="submit" class="btn btn-primary btn-save btn-save-fallback me-2"><i class="fas fa-save"></i></button><small class="text-muted">or use CTRL + s</small>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <%= f.input :logo_url, label: "Logo URL (Beta)" %>
      <%= f.input :contact_person %>
      <%= f.input :company_name %>
      <%= f.input :street %>
      <div class="row">
        <%= f.input :postalcode, wrapper_html: { class: 'col-6' } %>
        <%= f.input :city, wrapper_html: { class: 'col-6' } %>
      </div>
    </div>

    <div class="col-8">
      <%= f.input :summary, input_html: { class: 'editor'}, label: "Management summary" %>
    </div>
  </div>
<% end %>
