<%# This file is used by devise for notifications %>
<% flash.each do |key, value|
    classes = 'blue'
    case key
        when  'alert'
        classes = 'red'
        when 'notice'
        classes = 'blue'
        else
        classes = 'blue'
    end
    %>
    <%= javascript_tag do %>
        M.toast({html: "<%= value %>", displayLength: "3000", classes: "<%= classes %>"});
    <% end %>
<% end %>
<% flash.clear %>