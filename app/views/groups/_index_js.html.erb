    var id = $('.selected-group').attr('gid');
    $("#datatable-" + id + "_wrapper").find(".ui-selectable tr a").each(function () {
      if ($(this).parents(".ui-selectee").hasClass("ui-selected")) {
        clients.push($(this).attr("id"));
      }
