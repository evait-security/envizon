<div class="modal-content">
  <div class="modal-header bg-primary">
    <h5 class="modal-title text-white">Edit screenshot description</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body">
      <%= simple_form_for @screenshot, remote: true do |f| %>
        <div class="row">
          <div class="col-10">
            <%= f.input :description, :input_html => { :rows => 1 } %>
          </div>
          <div class="col-2 d-flex align-items-end form-group">
            <button type="submit" class="btn btn-primary btn-save"><i class="fas fa-save me-2"></i>Save</button>
          </div>
        </div>
      <% end %>
    <div class="row">
      <%= image_tag url_for(@screenshot.image), :class => "", width: '100%' %>
    </div>
  </div>
</div>
